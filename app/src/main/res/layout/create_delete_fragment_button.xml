<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/createDeleteFragmentButtonImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/create_fragment_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/createDeleteFragmentButtonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@id/createDeleteFragmentButtonImageView"
        app:layout_constraintEnd_toEndOf="@id/createDeleteFragmentButtonImageView"
        app:layout_constraintStart_toStartOf="@+id/createDeleteFragmentButtonImageView"
        app:layout_constraintTop_toTopOf="@id/createDeleteFragmentButtonImageView" />

    <ImageView
        android:id="@+id/createDeleteFragmentButtonMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_minus"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/createDeleteFragmentButtonImageView"
        app:layout_constraintEnd_toEndOf="@id/createDeleteFragmentButtonImageView"
        app:layout_constraintStart_toStartOf="@+id/createDeleteFragmentButtonImageView"
        app:layout_constraintTop_toTopOf="@id/createDeleteFragmentButtonImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>